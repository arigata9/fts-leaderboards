<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="text-center bg-dark hero-image">

    <!-- Preloader -->
    <div class="loader-wrapper">
        <div class="loading" id="loader">
            <div class="arc"></div>
            <div class="arc"></div>
            <div class="arc"></div>
        </div>
    </div>

    <!-- localization -->
    <div class="locale-button">
        <div class="locale-button-style">
            <% if (typeof en !== 'undefined') { %>
                <a href="/ru"><%- en.toggleLocaleEmote %></a>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <a href="/"><%- ru.toggleLocaleEmote %></a>
            <% } %>
        </div>
        
    </div>

    <!-- Server Name Head Line -->
    <div class="d-flex flex-row-reverse" style="margin-top: 0;">
        <div class="p-2 fts-logo">
        <img style="margin-right: 2rem; width: 100%;" src="img/FTS-logo.png" />
        </div>
    </div>
    
    <!-- First diagonal box -->
    <div class="diagonal-box" style="margin-top: var(--top-margin);"> 
        <!-- First diagonal content box -->
        <div class="diagonal-content">
        <h2 class="display-2 text-white fade show">
            <!-- Welcome -->
            <% if (typeof en !== 'undefined') { %>
                <%= en.welcome %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.welcome %>
            <% } %>
        </h2>
        <p class="lead text-white">
            <% if (typeof en !== 'undefined') { %>
                <%= en.welcomesubheadline %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.welcomesubheadline %>
            <% } %>
        </p>
        <p>
            <a href="#leaderboards" class="btn btn-lg btn-outline-light fw-bold border-black text-white"><% if (typeof en !== 'undefined') { %>
                <%= en.Leaderboards %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.Leaderboards %>
            <% } %></a>
            <a href="#about" class="btn btn-lg btn-outline-light fw-bold border-black text-white"><% if (typeof en !== 'undefined') { %>
                <%= en.learnmore %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.learnmore %>
            <% } %></a>
            <a href="#faq" class="btn btn-lg btn-outline-light fw-bold border-black text-white">FAQ</a>
        </p>
        </div>
    
    </div>
    
    <!-- Second diagonal box -->
    <div class="diagonal-box background-one">
        <div class="diagonal-content text-center">
        <h2 class="display-2 text-white" id="leaderboards">
            <% if (typeof en !== 'undefined') { %>
                <%= en.Leaderboards %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.Leaderboards %>
            <% } %>
        </h2>

        <div class="card w-25 mx-auto">
            <div class="card-header">
                Track selector
            </div>
            <div class="card-body">
                <p class="card-text">Choose a track to display the leaderboard for it</p>
                <label for="maps">Choose:</label>
                <select class="form-select" id="trackselector" name="trackid">
                    <% tracks.forEach(track => { %>
                        <option value="<%= track.track_id %>"><%= track.track_name %></option>
                    <% }); %>
                </select>
                <br>
                <input class="btn btn-primary" value="Open" onclick="openLeaderboard()">
            </div>
        </div>
        </div>
    </div>
    
    <!-- Third diagonal box -->
    <div class="diagonal-box background-two">
        <div class="diagonal-content text-center text-white">
        <h2 class="display-2" id="about">
            <% if (typeof en !== 'undefined') { %>
                <%= en.aboutserver %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%= ru.aboutserver %>
            <% } %>
        </h2>
    
        <p class="lead">
            <% if (typeof en !== 'undefined') { %>
                <%- en.abouttext %>
            <% } %>
            <% if (typeof ru !== 'undefined') { %>
                <%- ru.abouttext %>
            <% } %>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/0Sdf_0YuX6g" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </p>
        </div>
    </div>

    <!-- Fourth diagonal box -->
    <div class="diagonal-box background-four">
        <div class="diagonal-content text-center text-white">
            <h2 class="display-2" id="faq">
                <% if (typeof en !== 'undefined') { %>
                    <%- en.faqheading %>
                <% } %>
                <% if (typeof ru !== 'undefined') { %>
                    <%- ru.faqheading %>
                <% } %>
            </h2>
            <p class="lead">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        How can I join this server?
                    </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <strong>Join fucking Fujiwara Tofu Shop on FiveM.</strong> It's that easy, really.
                    </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Is tishio pepega or really owner?
                    </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <strong>I need content.</strong> Please.
                    </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Did 0xy make this mess?
                    </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <strong>Yes.</strong> And I have no idea what to put here.
                    </div>
                </div>
                </div>
            </div>
            </p>
        </div>
    </div>
    
    <div class="credits-box">
        <div class="p-2 text-white credits-box-inner">
        <p>
            Made with &#x2615; by arigata9 / 0xygen
        </p>
        </div>
    </div>
    
    <!-- Javascript stuff going on here... -->

    <script>
        "use strict";
        const setButtonLeftAttr = (value) => {
            const buttonGroup = document.querySelector('.button-group');
            buttonGroup.dataset.left = value;
        };
        const buttonClick = (value) => {
            setButtonLeftAttr(value);
        };

    </script>

    <script>
        // openLeaderboard function
        function openLeaderboard() {
            //todo
            const trackselector = document.getElementById("trackselector");
            const track_id = trackselector.value;

            return window.open(`/tracks/${track_id}`);
        }
    </script>
  
</body>
</html>